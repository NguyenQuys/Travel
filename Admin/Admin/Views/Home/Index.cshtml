@model IEnumerable<Admin.Models.Tour>
@{
    ViewData["Title"] = "Home Page";
}

<section class="py-2">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justifycontent-center">

            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card gap-3" style="width: 18rem">
                        <div class="card-body">
                            <h5 class="card-title">
                                @Html.DisplayFor(modelItem =>
                                         item.TourName)
                            </h5>
                            <div class="d-flex">
                                <span>Price: </span>
                                <p class="mx-3">@item.PriceForAdult.ToString("#,##0") Vnđ</p>
                            </div>
                            <div class="d-flex">
                                <span>Price: </span>
                                <p class="mx-3">@item.PriceForChildren.ToString("#,##0") Vnđ</p>
                            </div>
                            <a>
                                <button class="btn btn-outline-dark">
                                    <i class="bi-cart-fill me-1"></i> Add to Like
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>