
@model ShoppingCart
@{
    Layout = "~/Views/Shared/Test_Layout.cshtml";


}
<h2>Your Cart</h2>
<table>
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@(item.Price * item.Quantity)</td>
            <td>
                <a asp-action="RemoveFromCart" asp-route-productId="@item.ID_Tour">Remove</a>
            </td>
        </tr>
    }
</table>
<form class="d-flex">
    <button class="btn btn-outline-dark" type="submit" asp-controller="ShoppingCart" asp-action="Checkout">
        <i class="bi-cart-fill me-1"></i>
        PAYMENT
    </button>
</form>