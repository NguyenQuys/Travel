@model testNETCORE.ViewModels.Domestic_Tour_ViewModel

@{
    ViewData["Title"] = "Tour Trong Nước";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* CSS cho vị trí cố định */
    .sticky-sidebar {
        position: sticky;
        top: 0;
        z-index: 1020;
        /* hoặc số lớn hơn nếu cần */
    }

    /* Điều chỉnh kích thước và kiểu cuộn cho phần col-md-8 */
    .scrollable-content {
        height: 80vh;
        /* chiều cao tối đa cho nội dung cuộn */
        overflow-y: auto;
        /* cho phép nội dung cuộn khi vượt quá chiều cao */
    }

        .scrollable-content::-webkit-scrollbar {
            width: 0;
        }
</style>

@foreach (var item in Model.TourList)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-8 scrollable-content">
                <nav style="position: sticky; top:0; z-index: 1000;" class="navbar navbar-expand-sm bg-white navbar-white justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#section1">Hình ảnh</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#section2">Giá vé</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#section3">Lịch trình</a>
                        </li>
                    </ul>
                </nav>
                <div>
                    <h3>@item.TourName</h3>
                </div>
                <div id="section1" class="container-fluid bg-success text-white" style="padding:100px 20px;">
                    <div id="demo" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                            <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                        </div>

                        <!-- The slideshow/carousel -->
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/img/@item.Image1"
                                     alt="Los Angeles" style="width:100%">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/@item.Image2"
                                     alt="Chicago" style="width:100%">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/@item.Image3"
                                     alt="New York" style="width:100%">
                            </div>
                        </div>

                        <!-- Left and right controls/icons -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                </div>
                <div id="section2" class="container-fluid bg-warning" style="padding:100px 20px;">
                    <!-- Content for section 2 -->
                </div>
                <div id="section3" class="container-fluid bg-secondary text-white" style="padding:100px 20px;">
                    <!-- Content for section 3 -->
                </div>
            </div>

            <div class="col-lg-4 mt-5">
                <div class="card p-3 bg-light">
                    <div class="col-md-12">
                        <h3> Lịch Trình và Giá Tour </h3>
                        <div class="col-md-12 no-padding v-margin-bottom-10 select-depart-date">
                            Chọn Lịch Trình và Xem Giá:
                        </div>
                        <div class="col-md-12 wrapper-depart-date">
                            <div class="left">
                                <div>
                                    <h4 class="text-danger">@item.StartDate.ToString("dd/MM/yyyy")</h4>
                                    <h4 class="text-danger">@item.NdaysNnights</h4>
                                </div>
                                <div class="soluongdatve">
                                    <div class="card">
                                        <div class="row">
                                            <div class="col-md-4 text-center my-3">
                                                <h4> Người lớn </h4>
                                                <p class="mb-0"> Trên 10 tuổi</p>
                                            </div>
                                            <div class="col-md-4 d-flex align-items-center justify-content-center">
                                                <p>x @item.PriceForAdult.ToString("N0")</p>
                                            </div>
                                            <div class="col-md-4 d-flex">
                                                <button type="button" class="btn">-</button>
                                                <button type="button" class="btn">0</button>
                                                <button type="button" class="btn">+</button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card">
                                        <div class="row">
                                            <div class="col-md-4 text-center my-3">
                                                <h4> Trẻ em </h4>
                                                <p class="mb-0"> 5 - 10 tuổi</p>
                                            </div>
                                            <div class="col-md-4 d-flex align-items-center justify-content-center">
                                                <p>x @item.PriceForChildren.ToString("N0")</p>
                                            </div>
                                            <div class="col-md-4 d-flex">
                                                <button type="button" class="btn">-</button>
                                                <button type="button" class="btn">0</button>
                                                <button type="button" class="btn">+</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-3">
                                <div class="col-md-7">
                                    <h4> Tổng giá Tour </h4>
                                </div>
                                <div class="col-md-5">
                                    <h4>
                                        @{
                                            var totalPrice = (item.PriceForAdult + item.PriceForChildren).ToString("N0");
                                        } @totalPrice
                                    </h4>

                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="button" class="bg-white btn btn-inverse-primary btn-fw mx-3">Liên hệ tư vấn</button>
                                <button type="button" class="btn btn-warning mx-3">Đặt tour ngay</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
