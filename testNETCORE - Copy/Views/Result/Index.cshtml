@{
    ViewData["Title"] = "Tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            @if (Model.TourList.Count>0)
            {
                <h1 class="mb-3">Kết quả tìm kiếm cho điểm đến <span class="text-primary">@ViewData["destination"]</span></h1>
            }
            else
            {
                <h1 class="mb-3">Xin lỗi! Chúng tôi không tìm thấy Tour có điểm đến <span class="text-primary">@ViewData["destination"]</span>🥲🥲</h1>
            }
        </div>
        <style>
            .chooseLike {
                transition: transform 0.3s ease;
            }

                .chooseLike:hover {
                    transform: translateY(-5px);
                }

            .deledeBtn:hover {
                color: red;
            }
        </style>
        <div class="row wow fadeInUp">
            @foreach (var item in Model.TourList)
            {
                <a href="tour-trong-nuoc/@item.Link-@item.IdTour">
                    <div class="row bg-light card justify-content-center align-items-center chooseLike">
                        <div class="col-md-12">
                            <div class="row py-3">
                                <div class="col-lg-4">
                                    <img class="rounded justify-content-center align-items-center" width="100%" height="auto" src="~/img/@item.Image1">
                                </div>
                                <div class="col-lg-8">
                                    <h5>@item.TourName</h5>
                                    <p><span style="color:darkseagreen">@item.NdaysNnights</span></p>
                                    <h5 style="bottom:0" class="text-danger">Giá: @item.PriceForAdult.ToString("N0") VND/Khách</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                <hr>
            }
        </div>
    </div>
</div>
