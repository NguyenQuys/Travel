                                <div class="card p-3 bg-light">
                                    <div class="col-md-12">
                                        <h3> Lịch Trình và Giá Tour </h3>
                                        <div class="col-md-12 no-padding v-margin-bottom-10 select-depart-date">
                                            Chọn Lịch Trình và Xem Giá:
                                        </div>
                                        <div class="col-md-12 wrapper-depart-date">
                                            <div class="left">
                                                <div>
                                                    <h4 class="text-danger">@item.StartDate.ToString("dd/MM/yyyy") - @item.EndDate.ToString("dd/MM/yyyy")</h4>
                                                    <h4 class="text-danger">@item.NdaysNnights</h4>
                                                </div>
                                                <div class="soluongdatve">
                                                    <div class="card">
                                                        <div class="row">
                                                            <div class="col-md-4 text-center my-3">
                                                                <h4> Người lớn </h4>
                                                                <p class="mb-0"> Trên 10 tuổi</p>
                                                            </div>
                                                            <div class="col-md-4 d-flex align-items-center justify-content-center">
                                                                <p>x @item.PriceForAdult.ToString("N0")</p>
                                                            </div>
                                                            <div class="col-md-4 d-flex">
                                                                <button type="button" class="btn" id="decreaseBtnAdult">-</button>
                                                                <button type="button" class="btn" id="numberBtnAdult">0</button>
                                                                <button type="button" class="btn" id="increaseBtnAdult">+</button>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="card">
                                                        <div class="row">
                                                            <div class="col-md-4 text-center my-3">
                                                                <h4> Trẻ em </h4>
                                                                <p class="mb-0"> 5 - 10 tuổi</p>
                                                            </div>
                                                            <div class="col-md-4 d-flex align-items-center justify-content-center">
                                                                <p>x @item.PriceForChildren.ToString("N0")</p>
                                                            </div>
                                                            <div class="col-md-4 d-flex">
                                                                <button type="button" class="btn" id="decreaseBtnChildren">-</button>
                                                                <button type="button" class="btn" id="numberBtnChildren">0</button>
                                                                <button type="button" class="btn" id="increaseBtnChildren">+</button>
                                                                <script>
                                                                    document.addEventListener("DOMContentLoaded", function () {
                                                                        // Lấy ra các phần tử cần thiết
                                                                        const decreaseBtnA = document.getElementById("decreaseBtnAdult");
                                                                        const numberBtnA = document.getElementById("numberBtnAdult");
                                                                        const increaseBtnA = document.getElementById("increaseBtnAdult");
                                                                        const decreaseBtnC = document.getElementById("decreaseBtnChildren");
                                                                        const numberBtnC = document.getElementById("numberBtnChildren");
                                                                        const increaseBtnC = document.getElementById("increaseBtnChildren");
                                                                        const totalParagraph = document.getElementById("total");

                                                                        // Gán giá trị ban đầu cho số và tổng
                                                                        let currentValueC = parseInt(numberBtnC.textContent);
                                                                        let currentValueA = parseInt(numberBtnC.textContent);
                                                                        let totalValue = (currentValueC * @item.PriceForChildren) + (currentValueA * @item.PriceForAdult);
                                                                        totalParagraph.textContent = `Tổng: ${totalValue}`;

                                                                        // Gán sự kiện "click" cho nút giảm
                                                                        decreaseBtnA.addEventListener("click", function () {
                                                                            if (currentValueA > 0) {
                                                                                currentValueA--;
                                                                                updateValues();
                                                                            }
                                                                        });

                                                                        decreaseBtnC.addEventListener("click", function () {
                                                                            if (currentValueC > 0) {
                                                                                currentValueC--;
                                                                                updateValues();
                                                                            }
                                                                        });

                                                                        // Gán sự kiện "click" cho nút tăng
                                                                        increaseBtnA.addEventListener("click", function () {
                                                                            currentValueA++;
                                                                            updateValues();
                                                                        });

                                                                        increaseBtnC.addEventListener("click", function () {
                                                                            currentValueC++;
                                                                            updateValues();
                                                                        });

                                                                        // Cập nhật giá trị và hiển thị tổng
                                                                        function updateValues() {
                                                                            totalValue = (currentValueC * @item.PriceForChildren) + (currentValueA * @item.PriceForAdult);
                                                                            numberBtnA.textContent = currentValueA;
                                                                            numberBtnA.value = currentValueA;
                                                                            numberBtnC.textContent = currentValueC;
                                                                            numberBtnC.value = currentValueC;
                                                                            totalParagraph.textContent = `${totalValue.toLocaleString()}`;
                                                                        }
                                                                    });

                                                                </script>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row my-3">
                                                <div class="col-md-7">
                                                    <h5 class="text-danger"> Tổng giá Tour </h5>
                                                </div>
                                                <div class="col-md-5">
                                                    <h5 id="total" class="text-danger">
                                                        @*Gia tour hien thi o day*@
                                                    </h5>

                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-evenly">
                                                <a style="cursor: pointer;" id="favoriteIcon" class="material-symbols-outlined d-flex align-items-center" onclick="changeColor()">
                                                    favorite
                                                </a>
                                                <a type="button" class="bg-white btn btn-inverse-primary btn-fw mx-3" data-bs-toggle="modal" data-bs-target="#lien_he">Liên hệ tư vấn</a>
                                                <button type="button" class="btn btn-warning mx-3">Đặt tour ngay</button>
                                                <script>
                                                    function changeColor() {
                                                        var icon = document.getElementById("favoriteIcon");
                                                        icon.classList.toggle("text-danger");
                                                    }
                                                </script>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal -->
                        <div style="top:200px" class="modal fade" id="lien_he">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Liên hệ tư vấn</h4>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="container px-5">
                                            <div class="text-danger"></div>
                                            <div class="mb-1">
                                                <label class="my-2">Họ và Tên</label>
                                                <input class="form-control" type="text" />
                                                <span class="text-danger"></span>
                                            </div>
                                            <div class="mb-1">
                                                <label class="my-2">Số điện thoại</label>
                                                <input class="form-control" type="tel" />
                                                <span class="text-danger"></span>
                                            </div>
                                            <div class="mb-1">
                                                <label class="my-2">Yêu cầu khác</label>
                                                <input class="form-control" type="text" />
                                                <span class="text-danger"></span>
                                            </div>
                                            <div>
                                                <input style="width: 100%;" type="submit" value="GỬI YÊU CẦU" class="btn btn-primary btn-sm my-3 py-3" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @* Modal Ends *@
                    </div>
                }
            </main>
        </div>
        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-white mb-4">Liên hệ</h5>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>HUTECH E-CAMPUS</p>
