@model testNETCORE.ViewModels.Payment_Confirmation_ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="mb-3">Lịch Sử Thanh Toán</h1>
        </div>
        <style>
            .chooseLike {
                transition: transform 0.3s ease;
            }

                .chooseLike:hover {
                    transform: translateY(-5px);
                }

            .deledeBtn:hover {
                color: red;
            }
        </style>
        <div class="row wow fadeInUp">
            <div class="col-lg-12 my-0">
                @foreach (var item in Model.PaidTourList)
                {
                    <a >
                        <div class="row bg-light card justify-content-center align-items-center chooseLike">
                            <div class="col-md-12">
                                <div class="row py-3">
                                   @*  <div class="col-lg-4">
                                        <img class="rounded justify-content-center align-items-center" width="100%" height="auto" src="~/img/@item.Image1">
                                    </div> *@
                                    <div class="col-lg-8">
                                        <h5>@item.TourName</h5>
                                        @*<p>Mã thanh toán: @Model.InvoiceList.FirstOrDefault(m => m.IdTour == item.IdTour)?.IdOrder</p>*@
                                        <p>Mã thanh toán: @item.IdOrder</p>
                                        <p>Ngày thanh toán: @item.Time.ToString("dd/MM/yyyy")</p>
                                        <h5 style="bottom:0" class="text-danger">Giá: @item.Price.ToString("N0") VND</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    <hr>
                }
            </div>
        </div>
    </div>
</div>

