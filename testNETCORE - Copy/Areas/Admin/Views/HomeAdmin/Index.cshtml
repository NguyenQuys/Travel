@model testNETCORE.Areas.Admin.Controllers.AdminModalViews.Admin_Domestic_Tour;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách các tour trong nước</h1>
<table>
    <thead>
        <tr>
            <th>Tên tour</th>
            <th>Điểm bắt đầu</th>
            <th>Điểm đến 1</th>
            <th>Điểm đến 2</th>
            <th>Điểm đến 3</th>
            <th>Giá người lớn</th>
            <th>Giá trẻ em</th>
            <th>Số lượng tối đa</th>
            <th>Số ngày đi</th>
            <th>Chỉnh sữa</th>
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tour in Model.TourTrongNuoc)
        {
            <tr>
                <td>@tour.TourName</td>
                <td>@tour.Departure</td>
                <td>@tour.Destination1</td>
                <td>@tour.Destination2</td>
                <td>@tour.Destination3</td>
                <td>@tour.PriceForAdult</td>
                <td>@tour.PriceForChildren</td>
                <td>@tour.MaxQuantity</td>
                <td>@tour.NdaysNnights</td>
                <td>
                    <a href="@Url.Action("Update", "Tour", new { id = tour.TourId })" class="btn btn-info" role="button">Sửa</a>
                </td>

                <td>
                    <a href="@Url.Action("Delete", "Tour", new { id = tour.TourId })" class="btn btn-danger" role="button">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

