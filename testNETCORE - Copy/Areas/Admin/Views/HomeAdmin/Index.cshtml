            <th>Giá trẻ em</th>
            <th>Số ngày đi</th>
            <th>Chỉnh sữa</th>
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tour in Model.TourNgoaiNuoc)
        {
            <tr>
                <td>@tour.TourName</td>
                <td>@tour.Destination1</td>
                <td>@tour.Destination2</td>
                <td>@tour.Destination3</td>
                <td>@tour.PriceForAdult</td>
                <td>@tour.PriceForChildren</td>
                <td>@tour.NdaysNnights</td>
                <td>
                    <a class="btn btn-success" asp-area="Admin" asp-action="Update" asp-route-id="@tour.IdTour">Sửa</a>
