@model _2180607445_HaMinhDuc.Models.Product

@{
    ViewData["Title"] = "Display";
}

<h1>Display</h1>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width= 250px />
        </dd>
        <dt class="col-sm-2">
            Different images
        </dt>
        <dd class="col-sm-10">
            @if (ViewBag.Images != null)
            {
                @foreach (var ImageUrl in ViewBag.Images)
                {
                    <img src="ImageUrl" alt="Product Images" />
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Category
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-outline-warning" asp-action="Index">Trở về</a>
</div>